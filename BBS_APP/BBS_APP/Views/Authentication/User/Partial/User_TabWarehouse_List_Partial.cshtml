    //    column.Caption = "Det Id";
    //    column.Settings.AllowSort = DefaultBoolean.False;
    //    column.Width = 0;
    //    column.ReadOnly = true;
    //});

    settings.Columns.Add(column =>
    {
        column.Caption = "Warehouse Code";
        column.Name = "WhsCode_";
        column.FieldName = "WhsCode_";
        column.Settings.AllowSort = DefaultBoolean.False;
        column.Width = 150;
        column.ReadOnly = true;

        column.PropertiesEdit.Style.BackColor = System.Drawing.Color.FromName("#E0E0E0"); 
        column.CellStyle.ForeColor = System.Drawing.Color.Black;
    });

    settings.Columns.Add(column =>
    {
        column.Caption = "Warehouse Name";
        column.Name = "WhsName_";
        column.FieldName = "WhsName_";
        column.Settings.AllowSort = DefaultBoolean.False;
        column.Width = 350;
        column.ReadOnly = true;

        column.PropertiesEdit.Style.BackColor = System.Drawing.Color.FromName("#E0E0E0"); 
        column.CellStyle.ForeColor = System.Drawing.Color.Black;
    });

    settings.SettingsPager.Mode = GridViewPagerMode.ShowAllRecords;

    settings.CellEditorInitialize = (s, e) =>
    {
        ASPxEdit editor = (ASPxEdit)e.Editor;
        editor.ValidationSettings.Display = Display.Dynamic;
    };

