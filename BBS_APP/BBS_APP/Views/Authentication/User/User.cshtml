        var columnNames = s.listBox.columnFieldNames;
        if (s.GetSelectedItem() != null) {
            for (var i = 0; i < columnNames.length; i++) {
                if (columnNames[i] == 'BranchCode') {
                    BranchCode.SetValue(s.GetSelectedItem().texts[i]);
                }

            }
        }
    }

