        $.ajax({
            type: "POST",
            url: '@Url.Action("Add", "TukarFakturSend")',
            data: formData,
            beforeSend: function () {
                OnBegin();
            },
            success: function (response) {
                RefreshAfterSuccess(response);
                OnSuccessMsgBox();
            },
            error: function (jqXhr, textStatus, errorThrown) {
                OnFailure(jqXhr, textStatus, errorThrown)
            },
            complete: function () {
                OnComplete();
            }
        });


    }

    function OnClickBtnUpdate(s, e) {
